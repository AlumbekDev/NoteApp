<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.FormFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/forever_tool"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/readi_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="55dp"
            android:text="Готово"
            android:textColor="@color/teal_700"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="12:28"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/easeOut"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/right"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="08.06.21"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:id="@+id/title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/forever_tool"
        android:layout_margin="10dp"
        android:hint="Input title"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>





</androidx.constraintlayout.widget.ConstraintLayout>